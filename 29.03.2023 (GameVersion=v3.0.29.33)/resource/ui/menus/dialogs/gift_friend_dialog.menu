            columns                 1
            rows                    5
            buttonSpacing           12
            scrollbarSpacing        40
            scrollbarOnLeft         0
            visible					1
            tabPosition             1
            selectOnDpadNav         0

            ButtonSettings
            {
				rui						"ui/generic_gift_friend_button.rpak"
				style					RuiButton
                clipRui                 1
                wide					400
                tall					50
                allcaps					0
                textAlignment			left
                cursorVelocityModifier  0.7
                rightClickEvents		0
				doubleClickEvents       0
				middleClickEvents       0
                sound_focus             "UI_Menu_Focus_Small"
                sound_accept            ""
                sound_deny              ""
            }

            pin_to_sibling			DialogContent
            pin_corner_to_sibling	BOTTOM
            pin_to_sibling_corner	BOTTOM
        }

        FriendNameTextEntryFrame
        {
            ControlName			    RuiPanel
            wide					367
            tall					48
            visible				    1
            rui                     "ui/club_setting_frame.rpak"
            ruiArgs
            {
                name        ""
                subtitle    ""
            }
            pin_to_sibling			FriendNameTextEntry
            pin_corner_to_sibling	CENTER
            pin_to_sibling_corner	CENTER
        }

        FriendNameTextEntrySearchButton
        {
            ControlName			    RuiButton
            wide					126
            tall					48
            visible				    1
            proportionalToParent    1
            rui                     "ui/gifting_searchbar_button.rpak"
			cursorVelocityModifier     0.7
			cursorPriority             20
            pin_to_sibling			FriendNameTextEntryFrame
            pin_corner_to_sibling	LEFT
            pin_to_sibling_corner	RIGHT
        }

         FriendNameTextEntry
         {
             ControlName			    TextEntry
             zpos					    100 // This works around input weirdness when the control is constructed by code instead of VGUI blackbox.
             xpos                       0
             ypos                       -139
             wide					    352
             tall					    48
             visible				    1
             enabled				    1
             textHidden				    0
             editable				    1
             maxchars				    16
             textAlignment			    "east"
             ruiAsianFont               DefaultAsianFont
             ruiFont                    TitleRegularFont
