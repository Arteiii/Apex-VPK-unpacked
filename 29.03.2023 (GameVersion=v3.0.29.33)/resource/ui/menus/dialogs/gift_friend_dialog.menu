             allowSpecialCharacters	    1
             allowAdditionalSpecialCharacters 1
             allowUnnecessarySpaces     1
             unicode					1
             selectOnFocus              0
             cursorVelocityModifier     0.7
             cursorPriority             20
             tabPosition                1

             proportionalToParent       1
             pin_to_sibling			    DialogContent
             pin_corner_to_sibling	    CENTER
